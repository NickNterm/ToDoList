<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Theme">
        <SwitchPreferenceCompat
            app:key="theme"
            app:summaryOff="Dark Theme Enabled"
            app:summaryOn="Light Theme Enabled"
            app:title="Light Theme" />
        <ListPreference
            app:defaultValue="Cyan"
            app:entries="@array/Colors"
            app:entryValues="@array/Color_values"
            app:key="color"
            app:title="Theme Color"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>