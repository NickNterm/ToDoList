<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/PrimaryBackgroundDark">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerRed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RED"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/color_selected_in_color_picker"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ORANGE"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerYellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="YELLOW"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerGreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GREEN"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/lime"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerLime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LIME"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/cyan"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerCyan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CYAN"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerBlue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BLUE"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/PrimaryCyan"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ColorPickerCustom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CUSTOM"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ColorPickerSelect"
        app:cardBackgroundColor="@color/PrimaryCyan"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/PrimaryBackgroundDark"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>