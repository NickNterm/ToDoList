<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp">
<LinearLayout android:id="@+id/mainLL"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/PrimaryBackgroundDark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TimeItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:text="TIME"
            android:textColor="?android:textColor"
            android:textSize="17dp" />
    <TextView
        android:id="@+id/NameItemText"
        android:layout_width="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_height="wrap_content"
        android:textColor="?android:textColor"
        android:textSize="22dp"
        android:text="NAME"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonLL"
        android:animateLayoutChanges="true"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/EditItemButton"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:textColor="?android:textColor"
            android:layout_marginStart="30dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/recycle_view_item_button"
            android:text="Edit"/>
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
